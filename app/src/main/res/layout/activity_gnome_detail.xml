<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textSize="25sp"/>

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/name_input"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_pic"
        android:layout_alignTop="@+id/profile_pic"
        android:layout_marginLeft="30dp"
        android:text="Age:" />

    <TextView
        android:id="@+id/age_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/age_label"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/age_label"
        android:text="age" />

    <TextView
        android:id="@+id/weight_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age_label"
        android:layout_below="@+id/age_label"
        android:layout_marginTop="10dp"
        android:text="Weight:" />

    <TextView
        android:id="@+id/weight_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age_input"
        android:layout_alignTop="@+id/weight_label"
        android:text="weight" />

    <TextView
        android:id="@+id/height_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight_label"
        android:layout_below="@+id/weight_label"
        android:layout_marginTop="10dp"
        android:text="Height:" />

    <TextView
        android:id="@+id/height_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/weight_input"
        android:layout_alignTop="@+id/height_label"
        android:text="height" />

    <TextView
        android:id="@+id/hair_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/height_label"
        android:layout_below="@+id/height_label"
        android:layout_marginTop="10dp"
        android:text="Hair:" />

    <TextView
        android:id="@+id/hair_color_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hair_color_label"
        android:layout_alignTop="@+id/hair_color_label"
        android:layout_alignStart="@+id/height_input"
        android:text="hair color" />

    <TextView
        android:id="@+id/professions_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/profile_pic"
        android:layout_below="@+id/profile_pic"
        android:layout_marginTop="15dp"
        android:text="Professions:" />

    <TextView
        android:id="@+id/professions_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/professions_label"
        android:layout_below="@+id/professions_label"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Professions......" />

    <TextView
        android:id="@+id/friends_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/professions_input"
        android:layout_centerVertical="true"
        android:layout_below="@id/professions_input"
        android:layout_marginTop="15dp"
        android:text="Friends:" />

    <ListView
        android:id="@+id/friends_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/friends_label"
        android:orientation="vertical"/>
</RelativeLayout>